function _selfservice_categories_get_items(){
	$items = array();

	$result = db_query("SELECT id, title, weight, parent FROM {selfservice_category} WHERE deleted=0 ORDER BY weight");
	while($item = db_fetch_array($result))  {
		$items[] = $item;
	}
		
	return _selfservice_categories_get_ordered_list(0, $items);
}

function _selfservice_categories_get_ordered_list($parent, $items, $depth=0){
	$remnant = array(); 
	$children = array();
	foreach ($items as $item) {		
		if ($item['parent'] == $parent)	{
			$item['depth'] = $depth;
			$children[] = $item;
		}
		else{
			$remnant[] = $item;
		}
	}
	// sorting children
	usort($children, '_selfservice_categories_sort_by_weight');
	
	$ancestors = array();
	foreach ($children as $child) {
		$child_children = _selfservice_categories_get_ordered_list($child['id'], $remnant, $depth+1);
		$ancestors[] = $child;
		if (count($child_children)){
			$ancestors= array_merge($ancestors, $child_children);
		}
	}
	return $ancestors;
}

function _selfservice_categories_sort_by_weight($a, $b) {
	
	if ($a['weight'] == $b['weight']){
		return 0;
	}

	return ($a['weight'] < $b['weight']) ? -1 : 1;
}

