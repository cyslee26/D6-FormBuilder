function selfservice_form_category_submit($form, &$form_state){
	global $user;
		
	$id = isset($_POST['id']) ? intval($_POST['id']) : 0;
		
	if($_POST['op'] === 'Delete'){
		drupal_goto('selfservice/category/delete/'.$id);
	}
	
	$title = isset($_POST['title']) ? $_POST['title'] : '';
	$sid   = session_id();
	$selfservice_form = db_result(db_query("SELECT data FROM {form_builder_cache} where type='selfservice' AND form_id='%d' ORDER BY updated DESC LIMIT 1", $id));
		
	if($id){
		db_query("UPDATE {selfservice_category} SET title='%s', submitter=%d, sid='%s', data='%s' WHERE id=%d", $title, $user->uid, $sid, $selfservice_form, $id);
		
		drupal_set_message(t('Updated category %name.', array('%name' => $title)), 'warning');
	}
	else{
		db_query("INSERT INTO {selfservice_category} (title, submitter, parent, weight, sid, data) VALUES ('%s', %d, 0, 1, '%s', '%s') ", $title, $user->uid, $sid, $selfservice_form);
			
		drupal_set_message(t('Created new category %name.', array('%name' => $title)), 'warning');					
	}
	
	// delete from cache: when the page is load, the tool always looks for the cache table first than call the load function 
	form_builder_cache_delete('selfservice', $id);
	
	drupal_goto('selfservice/category/list');
}

